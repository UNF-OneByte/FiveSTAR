@page
@model FiveSTAR_tracking.Pages.Tasks.IndexModel

@{
    ViewData["Title"] = "Tasks";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">New Tasks</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].MaterialCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Projects) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Task)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialCost)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
